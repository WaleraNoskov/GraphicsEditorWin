<UserControl x:Class="GraphicsEditor.Controls.EditingAreaControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:GraphicsEditor.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:viewModels="clr-namespace:GraphicsEditor.ViewModels"
             xmlns:converters="clr-namespace:GraphicsEditor.Infrastructure.Converters"
             d:DataContext="{d:DesignInstance viewModels:MainViewModel}">
    <Grid>
        <Grid.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Theme/Dark.xaml" />
                    <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Theme/light.xaml" />
                    <ResourceDictionary Source="pack://application:,,,/Wpf.Ui;component/Resources/Wpf.Ui.xaml" />
                </ResourceDictionary.MergedDictionaries>
                <converters:NullToEnabledConverter x:Key="NullToEnabledConverter" />
                <converters:EmptyToEnabledConverter x:Key="EmptyToEnabledConverter" />
                <converters:InvertedNullToVisibilityConverter x:Key="InvertedNullToVisibilityConverter" />
            </ResourceDictionary>
        </Grid.Resources>
        <Grid Background="#00000000">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!-- <Canvas> -->
            <!--     <Rectangle Width="{Binding ElementName=EditingAreaGrid, Path=ActualWidth, Mode=OneWay}"  -->
            <!--                Height="{Binding ElementName=EditingAreaGrid, Path=ActualHeight, Mode=OneWay}"> -->
            <!--         <Rectangle.Fill> -->
            <!--             <DrawingBrush TileMode="Tile" Viewport="0,0,32,32" ViewportUnits="Absolute"> -->
            <!--                 <DrawingBrush.Drawing> -->
            <!--                     <GeometryDrawing Geometry="M0,0 H1 V1 H2 V2 H1 V1 H0Z" Brush="LightGray" /> -->
            <!--                 </DrawingBrush.Drawing> -->
            <!--             </DrawingBrush> -->
            <!--         </Rectangle.Fill> -->
            <!--     </Rectangle> -->
            <!-- </Canvas> -->

            <ui:TextBlock Grid.Row="1" Text="Open the image and make magic!" VerticalAlignment="Center" HorizontalAlignment="Center"
                          Visibility="{Binding SelectedLayer, Converter={StaticResource InvertedNullToVisibilityConverter}}" />
            <Grid Grid.Row="1" x:Name="LayersGrid" Visibility="{Binding SelectedLayer, Converter={StaticResource NullToVisibilityConverter}}" />
        </Grid>
    </Grid>
</UserControl>